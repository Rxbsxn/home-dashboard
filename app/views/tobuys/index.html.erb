
<%= stylesheet_link_tag 'tobuy' %>
  <link href="https://fonts.googleapis.com/css?family=Dosis" rel="stylesheet">

  <div id="tobuy">
    <center><h1>Things to buy:</h1>
      <div id="desc">
    <ol><% @tobuys.each do |tobuy| %> <li style="list-style:none;" id="<%= dom_id(tobuy) %>"><h2><%= tobuy.quantity %>x<span style="margin-left:30px;"><%= tobuy.name %></span>  <%= link_to image_tag( "bin.png", :width => "15"), tobuy_path(tobuy), remote: true, method: :delete%></h2>
    </li>
  <% end %>
  </ol>
</div>
  <h1><%= link_to image_tag( "cart.png", :width => "64"), new_tobuy_path %></h1>
    </div>
